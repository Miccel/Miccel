
@model Miccel.ViewModels.RandomMoviesViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@{ 
    var classPopular = (Model.Customers.Count > 5 ? "popular" : null);
}

<h2 class=@classPopular>@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>Non ci sono cliecenti</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}